@model IEnumerable<RusticsInventoryMVC.Models.Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<p><a href=@Url.Action("Create", "Products")
      class="btn btn-primary btn-md">Create New &raquo;</a></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountOnHand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCategory.Category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.ActionLink(item.ProductName.ToString(), "Details", new { id = item.ProductID })</td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
            @{ if (item.Price is null)
                {
                    <p>&nbsp;&nbsp;&nbsp;&nbsp;--</p>
                }
             }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountOnHand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCategory.Category)
        </td>
    </tr>
}

</table>
